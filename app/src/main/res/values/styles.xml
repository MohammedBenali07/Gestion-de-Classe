<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/inter_28pt_medium</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- Couleur de fond de la boîte de dialogue -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Couleurs du texte dans le DatePicker -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey</item>

        <!-- Couleurs pour l'en-tête -->
        <item name="android:colorControlActivated">@color/semiDark_blue</item> <!-- Couvre certains éléments activés -->
        <item name="colorAccent">@color/semiDark_blue</item> <!-- Change la couleur accentue (cela peut affecter l'en-tête) -->

        <!-- Couleur des boutons "OK" et "CANCEL" -->
        <item name="android:buttonBarButtonStyle">@style/CustomButton</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Borderless">
        <!-- Couleurs des boutons -->
        <item name="android:textColor">@color/dark_yellow</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
