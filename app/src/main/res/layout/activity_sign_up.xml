<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/light_yellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/img_signup"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/sign_up_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img_signup"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/inter_28pt_extrabold"
                android:text="Sign Up"
                android:textColor="@color/black"
                android:textSize="34dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/createText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account to get started"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/welcomeText"
                android:layout_marginHorizontal="36dp"
                android:textSize="18dp"
                android:textColor="@color/grey"/>
            <LinearLayout
                android:id="@+id/id_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="36dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/createText">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/inter_28pt_extrabold"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/background_inputs"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="12dp"
                    android:hint="Name"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_user"
                    android:textColorHint="@color/hint_inputs"
                    app:layout_constraintTop_toTopOf="parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="36dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/id_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Academic"
                    android:fontFamily="@font/inter_28pt_extrabold"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/background_inputs"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="12dp"
                    android:hint="name@ump.ac.ma"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_email2"
                    android:textColorHint="@color/hint_inputs"
                    app:layout_constraintTop_toTopOf="parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_spinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="36dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/id_email">
                <Spinner
                    android:id="@+id/status_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:spinnerMode="dropdown"
                    android:layout_weight="3"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/background_spinners"
                    android:entries="@array/status_spinner"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <Spinner
                    android:id="@+id/career_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:spinnerMode="dropdown"
                    android:layout_weight="2"
                    android:background="@drawable/background_spinners"
                    android:entries="@array/career_spinner"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="36dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/id_spinners">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:fontFamily="@font/inter_28pt_extrabold"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="textPassword"
                    android:background="@drawable/background_inputs"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="12dp"
                    android:hint="Create a password"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_password"
                    android:textColorHint="@color/hint_inputs"
                    app:layout_constraintTop_toTopOf="parent"/>
                <EditText
                    android:id="@+id/confirmPasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/background_inputs"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="10dp"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="12dp"
                    android:textColorHint="@color/hint_inputs"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/input_checked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="36dp"
                android:orientation="horizontal"
                android:gravity="start"
                app:layout_constraintTop_toBottomOf="@+id/id_password">
                    <CheckBox
                        android:id="@+id/comfirm_rules"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:buttonTint="@color/background_checkbox"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I've agree with the "
                        android:textColor="@color/grey"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms and Conditions"
                        android:textColor="@color/dark_yellow"
                        android:ellipsize="none"
                        android:singleLine="false"
                        android:scrollHorizontally="false"
                        android:breakStrategy="simple"
                        android:layout_marginEnd="4dp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signUp_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/background_button_fill"
                android:text="register"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_28pt_semibold"
                android:layout_marginHorizontal="36dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/input_checked"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/signUp_button"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have account?"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login Now"
                    android:fontFamily="@font/inter_28pt_extrabold"
                    android:textColor="@color/dark_yellow"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
