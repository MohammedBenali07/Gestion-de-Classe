<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".Fragment1">
    <LinearLayout
        android:id="@+id/infos_section1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        tools:context=".Fragment1"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_email_black"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginEnd="40dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/id_email_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohammed@gmail.com"
                android:textColor="@color/dark_yellow"
                android:textSize="18sp"/>
        </LinearLayout>

        <!-- Code Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_birth"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/id_birthday_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/04/2003"
                android:textColor="@color/dark_yellow"
                android:textSize="18sp"/>
        </LinearLayout>

        <!-- Level Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adress"
                android:layout_marginEnd="30dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/id_address_fragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anadlus,Oujda"
                android:textColor="@color/dark_yellow"
                android:textSize="18sp"/>
        </LinearLayout>

        <!-- Semester Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_employe"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginEnd="30dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textColor="@color/dark_yellow"
                android:textSize="18sp"/>
        </LinearLayout>
        <!-- Semester Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_school"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School"
                android:layout_marginEnd="30dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENSAO"
                android:textColor="@color/dark_yellow"
                android:textSize="18sp"/>
        </LinearLayout>

        <!-- Semester Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_departement"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departement"
                android:layout_marginEnd="25dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EIT"
                android:textColor="@color/dark_yellow"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/edit_pen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_pen_blue"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>